{
    "name": "mc-piston-api",
    "version": "0.0.0",
    "description": "A library to assist with Minecraft's piston-meta API.",
    "devDependencies": {
        "@types/node": "^18.14.6",
        "@typescript-eslint/eslint-plugin": "^5.54.0",
        "@typescript-eslint/parser": "^5.54.0",
        "esbuild": "^0.17.11",
        "eslint": "^8.35.0",
        "nodemon": "^2.0.21",
        "prettier": "^2.8.4",
        "rimraf": "^4.2.0",
        "ts-node": "^10.9.1",
        "typedoc": "^0.23.26",
        "typescript": "^4.9.5"
    },
    "scripts": {
        "fmt": "prettier --write .",
        "start": "ts-node src/dev.ts",
        "dev": "nodemon --watch src --ext json,ts,js --exec ts-node src/dev.ts",
        "build:tsc": "tsc -p .",
        "build:esbuild": "ts-node esbuild.ts",
        "build": "pnpm clean && pnpm build:esbuild && pnpm build:tsc && pnpm docs",
        "docs": "typedoc",
        "clean": "rimraf dist",
        "prepublish": "pnpm build",
        "lint": "eslint ."
    }
}
